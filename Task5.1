import tkinter as tk
from gpiozero import LED

led1 = LED(27)  
led2 = LED(22)  
led3 = LED(2)  

def reset():
    led1.off()
    led2.off()
    led3.off()

reset()

def turn_on(led):
    led1.off()
    led2.off()
    led3.off()
    if led == 1:
        led1.on()
    elif led == 2:
        led2.on()
    elif led == 3:
        led3.on()

def select():
    selected_led = led_var.get()
    turn_on(selected_led)
    
def quit_led():
    led1.off()
    led2.off()
    led3.off()
    root.quit()


root = tk.Tk()
root.title("LED lights")

led_var = tk.IntVar()

heading = tk.Label(root, text="Lights", font=("Helvetica", 30))
heading.pack()


radio1 = tk.Radiobutton(root, text="Red", variable=led_var, value=1, command=select)
radio2 = tk.Radiobutton(root, text="Red2", variable=led_var, value=2, command=select)
radio3 = tk.Radiobutton(root, text="Green", variable=led_var, value=3, command=select)

radio1.pack(anchor=tk.W)
radio2.pack(anchor=tk.W)
radio3.pack(anchor=tk.W)

reset_button = tk.Button(root, text="Reset", command=reset)
reset_button.pack()

exit_button = tk.Button(root, text="Exit", command=quit_led)
exit_button.pack()


root.mainloop()
